<h1>Listing petitions</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @petitions.each do |petition| %>
  <tr>
    <td><%= petition.title %></td>
    <td><%= petition.description %></td>
    <td><%= link_to 'Show', petition %></td>
    <td><%= link_to 'Edit', edit_petition_path(petition) %></td>
    <td><%= link_to 'Sign This Petition!', signatures_path, method: :post, :petition_id => petition.id %></td>
    <td><%= link_to 'Destroy', petition, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

